<div class="container">
  <div class="row">
    <div class="col col-md-4">
      <h2 class="display-6">Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label_html: { class: "form-label" },
                      input_html: { class: "form-control", autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label_html: { class: "form-label" },
                      input_html: { class: "form-control", autocomplete: "current-password" } %>
          <div class="my-2 form-check">
          <%= f.input :remember_me,
                      as: :boolean,
                      label_html: { class: "form-check-label" },
                      input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
